-var datetimepicker2 = true;
doctype html
html(lang="en")
  
  include ../components/mixinfiles
  +headerfile("datepicker")

  body
    
    +header

    .themebody-wrap


      // breadcrumb start
      +codexbreadcrumb('datepicker','form')
      // breadcrumb end
     
      
      // theme body start     
      .theme-body.codex-calendar
        .container-fluid
          .row              
            .col-xxl-4.col-md-6
              .card
                .card-header
                  h4 default
                .card-body
                  .input-group(id="datetimepicker1" data-target-input="nearest")
                    input.form-control(type="text" data-target="#datetimepicker1" data-toggle="datetimepicker" placeholder="DD/MM/YYYY")
            .col-xxl-4.col-md-6
              .card
                .card-header
                  h4 default
                .card-body
                  .input-group(id="datetimepicker2" data-target-input="nearest")
                    input.form-control(type="text" data-target="#datetimepicker2" data-toggle="datetimepicker" placeholder="MM/DD/YYYY")
            .col-xxl-4.col-md-6
              .card
                .card-header
                  h4 default
                .card-body
                  .input-group(id="datetimepicker3" data-target-input="nearest")
                    input.form-control(type="text" data-target="#datetimepicker3" data-toggle="datetimepicker" placeholder="YYYY/DD/MM")
